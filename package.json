{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "@rails/request.js": "^0.0.9",
    "@rails/ujs": "^7.0.7-2",
    "autoprefixer": "^10.4.14",
    "esbuild": "^0.18.11",
    "postcss": "^8.4.25",
    "stimulus": "^3.2.1",
    "stimulus-clipboard": "^4.0.1",
    "stimulus-reveal-controller": "^4.1.0",
    "tailwindcss": "^3.3.2"
  },
  "scripts": {
    "heroku-postbuild": "npm run build && npm run build:css",
    "clear": "rails tmp:cache:clear && rails assets:clean",
    "dev": "concurrently --names \"esbuild,css,redis\" -c cyan,magenta,yellow \"npm run watch:js\" \"npm run watch:css\" \"redis-server\"",
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "watch:js": "npm run build -- --watch",
    "watch:css": "npm run build:css -- --watch"
  },
  "engines": {
    "node": "^20.8.0",
    "npm": "^10.1.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.9",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "tailwindcss-animate": "^1.0.6"
  }
}
