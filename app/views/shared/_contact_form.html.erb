<div>
  <%= form_with(model: @contact, local: true) do |form| %>
    <% if @contact.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
        <ul>
          <% @contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= render(InputComponent.new(id: "first_name", label: "First Name:", type: "text", placeholder: "Peter")) %>
    <%= render(InputComponent.new(id: "last_name", label: "Last Name:", type: "text", placeholder: "Parker")) %>
    <%= render(InputComponent.new(id: "email", label: "Email:", type: "email", placeholder: "peter.parker@example.com")) %>
    <%= render(InputComponent.new(id: "phone_number", label: "Phone Number:", type: "tel", placeholder: "+1-202-555-0178")) %>
    <label for="message">Message:</label>
    <textarea placeholder="About yourself..." rows="4" name="message" id="message" class="block w-full rounded-md border-0 py-1.5 text-brand-blue-900 shadow-sm ring-1 ring-inset ring-brand-blue-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-blue-600 sm:text-sm sm:leading-6"></textarea>
    <div class="mt-10 flex justify-end">
      <%= render(ButtonComponent.new(label: "Submit", options: {type: "submit"})) %>
    </div>
  <% end %>
</div>
