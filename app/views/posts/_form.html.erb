<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, class: label_styles %>
    <%= form.text_field :title, class: input_styles %>
  </div>
  <div>
    <%= form.label :description, class: label_styles %>
    <%= form.text_area :description, class: text_area_styles %>
  </div>
  <div>
    <%= form.label :url, class: label_styles %>
    <%= form.text_field :url, class: input_styles %>
  </div>
  <div>
    <%= form.label :content, class: label_styles %>
    <%= form.text_area :content, rows: 20, class: text_area_styles %>
  </div>
  <div>
    <%= form.submit class: button_styles %>
  </div>
<% end %>
