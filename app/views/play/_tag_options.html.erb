<ul data-multi-select-target="list" id="search-options" class="bg-brand-blue-50 mt-2 w-1/3">
  <% tag_options.each do |t| %>
    <li
    id="<%= t[:id]%>"
    data-id="<%= t[:id]%>"
    data-name="<%= t[:name]%>"
    data-multi-select-target="option"
    data-action="click->multi-select#addItem"
      class="py-2 px-4 w-full text-brand-blue-600 hover:bg-brand-blue-100 border hover:font-bold border-brand-blue-300">
      <%= t[:name] %>
    </li>
  <% end %>
</ul>
