<div class="mt-10 px-20">
  <h1> Playground... </h1>
  <%= form_with url: play_submit_tags_path, method: :post  do |f| %>
    <div
      data-controller="multi-select"
      data-multi-select-search-url-value="<%= play_fetch_tags_path %>"
      data-multi-select-update-selected-url-value="<%= play_update_tag_selections_path %>">
      <input type="text" data-multi-select-target="search" data-action="input->multi-select#search" />
      <%= render partial: "tag_options", locals: { tag_options: [] } %>
      <%= render partial: "selected_tags", locals: {selected_tags: [] }%>
      <%# This grabs the value from the selectedTags target %>
      <%= f.hidden_field :selected_tag_ids, data: { multi_select_target: 'selectedTagIds' } %>
    </div>
    <%= f.submit "Submit", class: button_styles(css: "my-10") %>
  <% end %>
  <div id="response">
    Please select some tags...then submit.
  </div>
</div>
