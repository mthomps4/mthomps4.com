{
  "name": "ASDF Ruby with Postgres",
  "image": "mthomps4/devcontainer-ruby:latest",
  "workspaceFolder": "/root/workspace/project",
  "workspaceMount": "source=${localWorkspaceFolder},target=/root/workspace/project,type=bind",
  "customizations": {
    "codespaces": {      
      "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh"
      },
      "extensions": [
        // Add your VS Code extensions here, if needed
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Shopify.ruby-lsp"
      ]
    },
    "vscode": {      
      "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh"
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Shopify.ruby-lsp",
        "kaiwood.endwise",
        "streetsidesoftware.code-spell-checker",
        "setobiralo.erb-commenter",
        "aliariff.vscode-erb-beautify",
        "rayhanw.erb-helpers",
        "aki77.html-erb",
        "LoranKloeze.ruby-rubocop-revived",
        "marcoroth.stimulus-lsp"
      ]
    }
  },
  "remoteUser": "root",
  "forwardPorts": [3000, 5432],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "notify",
      "protocol": "https"
    },
    "5432": {
      "label": "Database",
      "onAutoForward": "notify",
      "elevateIfNeeded": true
    }
  }

}
